<Window x:Class="BindingsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Naam:" Background="GreenYellow"/>
            <TextBox x:Name="txtNaam"/>
            <TextBlock Text="leeftijd:" Background="GreenYellow"/>
            <TextBox x:Name="txtLeeftijd"/>
            <Button Content="Submit" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
